{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // https://joshuatz.com/posts/2020/fixing-jsx-types-between-preact-and-react-libraries/
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "paths": { // https://joshuatz.com/posts/2020/fixing-jsx-types-between-preact-and-react-libraries/
        "react": ["node_modules/preact/compat/"],
        "react-dom": ["node_modules/preact/compat/"]
    },
    // https://stackoverflow.com/questions/51634361/how-to-force-tsc-to-ignore-node-modules-folder
    // true means it won't try to compile node_modules content (even tho already "excluded")
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "exclude": ["node_modules"],
  "include": ["test.ts"]
}
